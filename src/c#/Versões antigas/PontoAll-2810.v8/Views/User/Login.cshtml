@model PontoAll_2810.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label" for="form2Example1" style="margin-left: 0px;">Usuario(Id)</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                    <div class="col d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="xxx" checked="">
                            <label class="form-check-label" for="form2Example31"> Manter conectado </label>
                            <br>

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary btn-block mb-4" />
                    <a class="btn btn-info" asp-controller="Home" asp-action="Index">Voltar</a>
                </div>
           </div>
       </form>
        <h3> @ViewBag.Message </h3>

    </div>
</div>





        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
