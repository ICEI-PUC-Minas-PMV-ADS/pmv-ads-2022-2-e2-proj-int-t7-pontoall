@model IEnumerable<PontoAll_2810.Models.BancoHoras>

@{
    ViewData["Title"] = "Index";
}

<h1>Controle de Banco de Horas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar novo Registro no Banco de Horas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocorrencias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notificacoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaldoBancoHoras)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocorrencias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notificacoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaldoBancoHoras)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdBancoHoras">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdBancoHoras">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdBancoHoras">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
