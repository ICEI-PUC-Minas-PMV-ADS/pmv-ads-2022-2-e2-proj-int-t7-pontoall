@model IEnumerable<PontoAll_2810.Models.RegistroPonto>

@{
    ViewData["Title"] = "Index";
}

<h1>Controle de Registros de Ponto</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Inserir novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>           
            <th>
                @Html.DisplayNameFor(model => model.DataRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalizacaoRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SomaHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.DataRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalizacaoRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SomaHora)
            </td>
            <td>                
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdRegistroPonto">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdRegistroPonto">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdRegistroPonto">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
