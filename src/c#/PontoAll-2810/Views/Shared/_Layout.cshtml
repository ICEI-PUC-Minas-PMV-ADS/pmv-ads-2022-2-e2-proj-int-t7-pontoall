                <!-- Codigo para inserir relogio ao vivo no menu do sistema-->
                <div class="col-sm-12">
                    <a style="color:red" font-size: 14px;"> Data do Sistema: </a>
                    <output id="data" style="color:red" font-size: 14px;"></output>
