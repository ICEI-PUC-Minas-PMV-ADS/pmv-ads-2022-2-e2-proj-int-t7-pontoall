@model  ProjetoPonto.Models.Usuario
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    //cria a tag do formulário
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(a => a.Email)
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Email, "", new { @class = "form-text text-muted" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Senha)
        @Html.PasswordFor(a => a.Senha, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Senha, "", new { @class = "form-text text-muted" })
    </div>

    <button type="submit" class="btn btn-primary">Logar</button>

}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}